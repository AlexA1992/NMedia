<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/feedFragment">

    <fragment
        android:id="@+id/feedFragment"
        android:name="ru.netology.nmedia.Activitys.FeedFragment"
        android:label="fragment_feed"
        tools:layout="@layout/fragment_feed" >
        <action
            android:id="@+id/action_feedFragment_to_createPostFragment"
            app:destination="@id/createPostFragment" />
    </fragment>
    <fragment
        android:id="@+id/createPostFragment"
        android:name="ru.netology.nmedia.Activitys.CreatePostFragment"
        android:label="CreatePostFragment" />

    <fragment
        android:id="@+id/feedFragment2"
        android:name="ru.netology.nmedia.Activitys.FeedFragment"
        android:label="fragment_feed"
        tools:layout="@layout/fragment_feed" >
        <action
            android:id="@+id/action_feedFragment2_to_singlePostFragment"
            app:destination="@id/single_post" />
    </fragment>
    <fragment
        android:id="@+id/single_post"
        android:name="ru.netology.nmedia.Activitys.SinglePostFragment"
        android:label="SinglePostFragment" />
</navigation>